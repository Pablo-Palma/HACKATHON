---
const {name, role, image} = Astro.props;
---
<div class="team">
    <div class="gradient" />
    <h5>
        {name}
    </h5>
    <p>
        {role}
    </p>
</div>

<style define:vars={{
    url: `url(${image})`
}}>
    h5, p {
        z-index: 10;
    }
div {
        background-image: var(--url);
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 400px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        padding-bottom: 1rem;
        padding-top: 1rem;
        color: white;
        text-align: center;
    position: relative;
    filter: drop-shadow(0 0 10px rgba(77, 229, 255, 0.3));
    }
.gradient {
        width: 100%;
        height: 100%;
        background-image: linear-gradient(180deg, rgba(0, 142, 166, 0.40) 0%, #046 83.14%);
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0.8;
        transition: opacity 0.2s ease-in-out
    }
.gradient:hover {
        opacity: 0;
    }
.team {
    transition: all 0.2s ease-in-out;
}
.team:hover {
    transform: scale(1.1) rotate(2deg);
}

</style>
